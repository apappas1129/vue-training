{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
      "paths": {
      "#root/*": ["./src/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types", "./node_modules"],
    "allowJs": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16",
      "esModuleInterop": true
    }
  },
  "exclude": ["node_modules", "json-server/*"]
}
